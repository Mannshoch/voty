{
  "name": "voty",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "yarn run next",
    "next": "NODE_OPTIONS='--inspect' next dev",
    "build": "next build",
    "check": "next build && yarn test",
    "cypress:open": "cypress open",
    "start": "next start",
    "start:bg": "next start &",
    "test": "cypress run",
    "docker-rm": "docker rm -f $(docker ps -a -q)",
    "deploy_dev": "ansible-playbook -i ansible/dev ansible/site.yml --tags app",
    "deploy_prod": "ansible-playbook -i ansible/prod ansible/site.yml --tags app",
    "site_dev": "ansible-playbook -i ansible/dev ansible/site.yml",
    "site_prod": "ansible-playbook -i ansible/prod ansible/site.yml",
    "pull_dev": "ansible-playbook -i ansible/dev ansible/pull.yml",
    "pull_prod": "ansible-playbook -i ansible/prod ansible/pull.yml",
    "migrate_dev": "ansible-playbook -i ansible/dev ansible/migrate.yml",
    "migrate_prod": "ansible-playbook -i ansible/prod ansible/migrate.yml",
    "nexus:reflection": "npx ts-node -T ./graphql/schema/index.ts --nexus-exit",
    "init:db": "yarn run migrate",
    "migrate": "cd prisma && npx prisma migrate save -c --experimental && npx prisma migrate up -c --experimental && npx prisma generate && cd ../",
    "dump_dev": "pg_dump --clean voty | ssh root@dev.voty.ch docker exec -i postgres psql -U voty voty",
    "ci:test": "yarn run migrate && yarn run start:bg && cypress run --record",
    "ci:release": "yarn install --frozen-lockfile && npx prisma generate && yarn run build",
    "graphql": "graphql-codegen --config codegen.yml",
    "lint": "npx eslint ./",
    "deploy": "./ansible/scripts/deploy.py"
  },
  "dependencies": {
    "@apollo/client": "^3.1.3",
    "@mdx-js/loader": "^1.6.19",
    "@mdx-js/runtime": "^1.6.19",
    "@next/mdx": "^9.5.5",
    "@nexus/schema": "^0.17.0",
    "@prisma/client": "2.10.0",
    "@rebass/forms": "^4.0.6",
    "apollo-server-micro": "^2.19.0",
    "graphql-request": "^3.3.0",
    "bcrypt": "^5.0.0",
    "cookie": "^0.4.1",
    "dayjs": "^1.8.35",
    "formik": "^2.1.5",
    "graphql": "^15.4.0",
    "graphql-middleware": "^4.0.2",
    "graphql-shield": "^7.4.0",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.20",
    "mjml": "^4.6.3",
    "mustache": "^4.0.1",
    "next": "10.0.0",
    "nexus-plugin-prisma": "^0.23.1",
    "nexus-plugin-shield": "^0.2.0",
    "nodemailer": "^6.4.11",
    "react": "17.0.1",
    "react-dom": "17.0.1",
    "react-minimal-pie-chart": "^8.0.1",
    "react-player": "^2.6.0",
    "rebass": "^4.0.7",
    "recoil": "^0.0.10",
    "theme-ui": "0.3.1",
    "winston": "^3.3.3",
    "winston-mail": "^2.0.0",
    "yup": "^0.29.3"
  },
