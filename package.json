{
  "name": "voty",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "NODE_OPTIONS='--inspect' next dev",
    "build": "npx nexus build && next build",
    "start": "next start",
    "docker-rm": "docker rm -f $(docker ps -a -q)",
    "deploy_dev": "ansible-playbook -i ansible/dev ansible/site.yml --tags app",
    "deploy_prod": "ansible-playbook -i ansible/prod ansible/site.yml --tags app",
    "site_dev": "ansible-playbook -i ansible/dev ansible/site.yml",
    "site_prod": "ansible-playbook -i ansible/prod ansible/site.yml",
    "pull_dev": "ansible-playbook -i ansible/dev ansible/pull.yml",
    "pull_prod": "ansible-playbook -i ansible/prod ansible/pull.yml",
    "migrate_dev": "ansible-playbook -i ansible/dev ansible/migrate.yml",
    "migrate_prod": "ansible-playbook -i ansible/prod ansible/migrate.yml",
    "nexus:reflection": "nexus dev --reflection --entrypoint pages/api/graphql.ts",
    "prisma": "cd prisma && npx prisma migrate save --experimental && npx prisma migrate up --experimental && npx prisma generate && cd ../",
    "dump_dev": "pg_dump --clean voty | ssh root@dev.votyapp.ch docker exec -i postgres psql -U voty voty"
  },
  "dependencies": {
    "@apollo/client": "^3.1.3",
    "@mdx-js/loader": "^1.6.16",
    "@next/mdx": "^9.5.2",
    "@rebass/forms": "^4.0.6",
    "aws-sdk": "^2.727.1",
    "bcrypt": "^5.0.0",
    "dotenv-flow": "^3.2.0",
    "formik": "^2.1.5",
    "framer-motion": "^2.6.3",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.20",
    "mjml": "^4.6.3",
    "mustache": "^4.0.1",
    "next": "9.5.1",
    "nexus": "^0.26.1",
    "nexus-plugin-prisma": "^0.17.0",
    "nexus-plugin-shield": "^0.2.0",
    "nodemailer": "^6.4.11",
    "prisma-loader": "^1.0.12",
    "react": "16.13.1",
    "react-burger-menu": "^2.7.1",
    "react-dom": "16.13.1",
    "react-player": "^2.6.0",
    "rebass": "^4.0.7",
    "recoil": "^0.0.10",
    "theme-ui": "^0.3.1",
    "winston": "^3.3.3",
    "winston-mail": "^2.0.0",
    "yup": "^0.29.3"
  },
  "devDependencies": {
    "@testing-library/cypress": "^7.0.0",
    "@types/node": "^14.0.27",
    "@types/react": "^16.9.44",
    "@types/theme-ui": "^0.3.6",
    "@types/winston-mail": "^1.5.1",
    "cypress": "^5.1.0",
    "js-yaml": "^3.14.0",
    "typescript": "^3.9.7"
  }
}
